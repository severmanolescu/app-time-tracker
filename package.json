{
  "name": "app-time-tracker",
  "version": "0.1.0",
  "description": "Steam-like application time tracker",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "time-tracker",
    "steam",
    "productivity"
  ],
  "author": "Sever Manolescu",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "auto-launch": "^5.0.6",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "time-tracker",
    "productName": "Time Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "!**/*",
      "main.js",
      "preload.js",
      "src/**/*",
      "main/**/*",
      "assets/icon.ico",
      "assets/tray-icon.png",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
